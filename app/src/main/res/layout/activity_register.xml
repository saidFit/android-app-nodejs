<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/indigo_200"

    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:src="@drawable/journalism"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/logo"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_marginHorizontal="15sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"

                android:alpha=".9"
                android:fontFamily="@font/sonsie_one"
                android:text="welcome●"
                android:textSize="30sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up to start your journy"
                android:layout_marginVertical="10dp"
                android:textSize="16sp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sign up●"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:alpha=".9"
                    android:fontFamily="@font/sonsie_one"
                    android:textSize="30sp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/userame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/OutlinedBoxWithBorderColor"
                    android:hint="username"
                    app:startIconDrawable="@drawable/person105"
                    android:layout_marginBottom="6dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/OutlinedBoxWithBorderColor"
                    android:hint="email"
                    app:startIconDrawable="@drawable/mail103"
                    android:layout_marginBottom="6dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/OutlinedBoxWithBorderColor"
                    android:hint="password"
                    app:startIconDrawable="@drawable/lock102"
                    app:passwordToggleEnabled="true"
                    android:layout_marginBottom="6dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cnfrmPaasword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/OutlinedBoxWithBorderColor"
                    android:hint="confirm password"
                    app:passwordToggleEnabled="true"
                    app:startIconDrawable="@drawable/lock102"
                    android:layout_marginBottom="6dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Register"
                    android:backgroundTint="@color/blue_500"
                    android:elevation="17dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="60dp"
                    android:background="@color/gray_400"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account ?-"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login."
                        android:layout_marginLeft="4dp"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        android:onClick="launchToLogin"
                        android:textStyle="bold"
                        />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>



</RelativeLayout>